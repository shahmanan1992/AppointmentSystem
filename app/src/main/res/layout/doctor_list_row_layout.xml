<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dip" >

    <TextView
        android:id="@+id/doctor_dateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/doctor_timeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/doctor_patient_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_dateData"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_communication_call"
        />
    <TextView
        android:id="@+id/doctor_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_dateData"
        android:layout_marginTop="7dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/doctor_patient_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_patient"
        android:layout_marginTop="7dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="16sp"

        />



</RelativeLayout>