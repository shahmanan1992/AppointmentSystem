<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Requested Appointments"
            android:id="@+id/patient_requested_appt"
            android:background="@color/BLUE"
            android:textColor="@color/WHITE"/>

        <ListView
            android:id="@+id/listRequestedItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Confirmed Appointments"
            android:id="@+id/patient_confirmed_appt"
            android:background="@color/BLUE"
            android:textColor="@color/WHITE"/>

        <ListView
            android:id="@+id/listConfirmedItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>


</ScrollView>
